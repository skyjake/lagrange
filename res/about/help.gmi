black:      #000000
gray25:     #282828
gray50:     #505050
gray75:     #A0A0A0
white:      #FFFFFF
brown:      106     80      0
orange:     255     192     0
teal:       0       96      128
cyan:       0       192     255
yellow:     255     255     32
red:        255     64      64
magenta:    255     0       255
blue:       132     132     255
